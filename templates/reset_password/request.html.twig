{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié
{% endblock %}

{% block body %}
	<div class="container-custom">
		<section class="content-wrapper">
			<section class="image-section"><!-- The image will be defined in CSS --></section>

			<!-- Right section for password reset form -->
			<section class="form-section-home">
				<div class="logo">
					<a href="{{ path('home') }}"><img src="{{ asset('img/logo.jpeg') }}" alt="Logo Knowledge Learning"></a>
				</div>

				<p class="welcome-text">Bienvenue sur Knowledge Learning, l'espace élève en ligne de formation.</p>

				<!-- Password reset form -->
				<div class="login-form">
					<h1 class="text-center">Mot de passe oublié</h1>

					{% for flash_error in app.flashes('reset_password_error') %}
						<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
					{% endfor %}

					{{ form_start(requestForm) }}
					<div class="form-group">
						{{ form_row(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse email'}}) }}
					</div>
					<div>
						<small>
							Entrez votre adresse email, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
						</small>
					</div>
					<button class="btn btn-primary mt-3">Envoyer le lien de réinitialisation</button>
					{{ form_end(requestForm) }}

					<!-- Link back to connection -->
					<div class="mt-3 text-center">
						<a href="{{ path('app_login') }}">Retour à la connexion</a>
					</div>
				</div>
			</section>
		</section>
	</div>
{% endblock %}
